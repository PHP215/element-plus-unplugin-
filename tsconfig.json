{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2019",
    "lib": ["es2019"],
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src", "tests"],
  "exclude": ["tests/fixtures"]
}
